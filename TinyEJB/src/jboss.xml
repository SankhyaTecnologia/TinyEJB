<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jboss PUBLIC "-//JBoss//DTD JBOSS 3.0//EN" "http://www.jboss.org/j2ee/dtd/jboss_3_0.dtd">

<jboss>

   <enterprise-beans>

     <!--
       To add beans that you have deployment descriptor info for, add
       a file to your XDoclet merge directory called jboss-beans.xml that contains
       the <session></session>, <entity></entity> and <message-driven></message-driven>
       markup for those beans.
     -->

      <session>
         <ejb-name>ColetorAnexo</ejb-name>
         <local-jndi-name>ColetorAnexoLocal</local-jndi-name>

      </session>
      <session>
         <ejb-name>OrdemServicoVOA</ejb-name>
         <jndi-name>ejb/OrdemServicoVOARemote</jndi-name>
         <local-jndi-name>ejb/OrdemServicoVOALocal</local-jndi-name>

      </session>
      <session>
         <ejb-name>AgendaVOA</ejb-name>
         <jndi-name>ejb/AgendaVOARemote</jndi-name>
         <local-jndi-name>ejb/AgendaVOALocal</local-jndi-name>

      </session>
      <session>
         <ejb-name>OrdemServicoSF</ejb-name>
         <jndi-name>ejb/OrdemServicoSFRemote</jndi-name>
         <local-jndi-name>ejb/OrdemServicoSFLocal</local-jndi-name>
         <configuration-name>SANKHYA STATEFUL FACADE</configuration-name>

      </session>
      <session>
         <ejb-name>TableDSFacade</ejb-name>
         <jndi-name>ejb/TableDSFacade</jndi-name>

      </session>

    <!--
      write a merge file jboss-webservices.ent for webservice-description 
    -->

   </enterprise-beans>

   <resource-managers>
   </resource-managers>

  <container-configurations>
	<!-- Configuracoes especificas da SANKHYA -->
	<container-configuration extends="Standard Stateful SessionBean">
		<container-name>SANKHYA STATEFUL FACADE</container-name>
		<container-cache-conf>
			<cache-policy>
				org.jboss.ejb.plugins.NoPassivationCachePolicy
			</cache-policy>
			<!-- cache-policy-conf>
				<min-capacity>100</min-capacity>
				<max-capacity>1000000</max-capacity>
				<remover-period>4200</remover-period>
				<max-bean-life>4200</max-bean-life>
				<overager-period>1800</overager-period>
				<max-bean-age>1800</max-bean-age>
				<resizer-period>400</resizer-period>
				<max-cache-miss-period>60</max-cache-miss-period>
				<min-cache-miss-period>1</min-cache-miss-period>
				<cache-load-factor>0.75</cache-load-factor>
			</cache-policy-conf-->
		</container-cache-conf>
		<container-pool-conf>
			<MinimumSize>30</MinimumSize>
			<MaximumSize>100</MaximumSize>
		</container-pool-conf>
		<container-interceptors>
			<interceptor>
				org.jboss.ejb.plugins.ProxyFactoryFinderInterceptor
			</interceptor>
			<!-- Gualberto
				<interceptor>org.jboss.ejb.plugins.LogInterceptor</interceptor>
			-->

			<!-- CMT -->
			<interceptor transaction="Container">
				org.jboss.ejb.plugins.TxInterceptorCMT
			</interceptor>
			<!-- Gualberto
				<interceptor transaction="Container" metricsEnabled="true">org.jboss.ejb.plugins.MetricsInterceptor</interceptor>
			-->
			<interceptor>
				br.com.sankhya.jbossaddons.SerializeCallInterceptor
			</interceptor>
			<interceptor transaction="Container">
				org.jboss.ejb.plugins.StatefulSessionInstanceInterceptor
			</interceptor>
			<!-- BMT -->
			<interceptor transaction="Bean">
				org.jboss.ejb.plugins.StatefulSessionInstanceInterceptor
			</interceptor>
			<interceptor transaction="Bean">
				org.jboss.ejb.plugins.TxInterceptorBMT
			</interceptor>
			<interceptor transaction="Bean" metricsEnabled="true">
				org.jboss.ejb.plugins.MetricsInterceptor
			</interceptor>
			<interceptor>
				org.jboss.resource.connectionmanager.CachedConnectionInterceptor
			</interceptor>
			<!-- Gualberto
				<interceptor>org.jboss.ejb.plugins.SecurityInterceptor</interceptor>
			-->
		</container-interceptors>
	</container-configuration>

</container-configurations>

</jboss>
